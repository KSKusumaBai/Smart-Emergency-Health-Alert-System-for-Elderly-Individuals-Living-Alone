<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient"
    tools:context=".ui.activities.MainActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_health_logo"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/tv_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/welcome_title"
        android:textColor="@color/primary_text"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <!-- Welcome Subtitle -->
    <TextView
        android:id="@+id/tv_welcome_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/welcome_subtitle"
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_title" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/ll_buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_subtitle">

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/btn_login"
            android:textSize="18sp"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_login"
            app:iconGravity="textStart" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/btn_register"
            android:textColor="@color/primary_color"
            android:textSize="18sp"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_register"
            app:iconGravity="textStart"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp" />

        <!-- Emergency Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_emergency"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/emergency_color"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/btn_emergency"
            android:textSize="18sp"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_emergency"
            app:iconGravity="textStart" />

        <!-- Doctor Portal Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_doctor_portal"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/btn_doctor_portal"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            app:icon="@drawable/ic_doctor"
            app:iconGravity="textStart" />

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Designed for Seniors with Care"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>